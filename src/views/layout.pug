    script.
      function abrirHceEnModal(event, form) {
        event.preventDefault();
        const dniPaciente = form.dni_paciente.value;
        const url = `hce?dni_paciente=${dniPaciente}`
        window.open(url, 'hce', 'width=800,height=600');
        form.target = 'hce';
        form.submit();
      }
      
      